#!/usr/bin/env perl
# @(#)Ident: doh-server 2013-07-14 23:37 pjf ;

use strict;
use warnings;
use version; our $VERSION = qv( sprintf '0.1.%d', q$Rev: 5 $ =~ /\d+/gmx );
use File::Spec::Functions   qw( catdir updir );
use FindBin                 qw( $Bin );
use lib                 catdir( $Bin, updir, 'lib' );

use Doh;

my $app = Doh->new;

$app->run_if_script;

__END__

